<Window x:Class="Binding_practice21._12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binding_practice21._12"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <TextBox x:Name="Text1" Grid.Row="0" Grid.Column="0" Margin="30"></TextBox>
        <TextBox x:Name="Text2" Grid.Row="1" Grid.Column="0" Margin="30"></TextBox>
        <Label Grid.Row="0" Grid.Column="1" Margin="30" Content="{Binding ElementName=Text1, Path=Text}"></Label>
        <Label Grid.Row="1" Grid.Column="1" Margin="30" Content="{Binding ElementName=Text2, Path=Text}"></Label>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
    </Grid>
</Window>
