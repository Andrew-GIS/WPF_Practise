<Window x:Class="Practice14._12_6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice14._12_6"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="71*"></ColumnDefinition>
            <ColumnDefinition Width="127*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="104*"></RowDefinition>
            <RowDefinition Height="315*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="First" Grid.ColumnSpan="2" Grid.Row="0" BorderBrush="Blue" BorderThickness="8" FontSize="50" />
        <Button Content="Second" Grid.Column="0" Grid.Row="1" BorderBrush="Yellow" BorderThickness="8" FontSize="50" />
        <Button Content="Third" Grid.Column="1" Grid.Row="1" BorderBrush="Green" BorderThickness="8" FontSize="50" />

    </Grid>
</Window>
